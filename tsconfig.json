{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable",
      "WebWorker"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "@components": [
        "./commons/components/index.ts"
      ],
      "@components/*": [
        "./commons/components/*"
      ],
      "@classes/*": [
        "./commons/classes/*"
      ],
      "@classes": [
        "./commons/classes/index.ts"
      ],
      "@interfaces": [
        "./commons/interfaces/index.ts"
      ],
      "@interfaces/*": [
        "./commons/interfaces/*"
      ],
      "@api": [
        "./commons/api/index.ts"
      ],
      "@api/*": [
        "./commons/api/*"
      ],
      "@enums": [
        "./commons/enums/index.ts"
      ],
      "@enums/*": [
        "./commons/enums/*"
      ],
      "@context": [
        "./contexts/index.ts"
      ],
      "@context/*": [
        "./contexts/*"
      ],
      "@utils": [
        "./utils/index.ts"
      ],
      "@utils/*": [
        "./utils/*"
      ],
      "@assets": [
        "./assets/index.ts"
      ],
      "@types": [
        "./commons/types/index.ts"
      ],
      "@types/*": [
        "./commons/types/*"
      ],
      "@themes": [
        "./themes/index.ts"
      ],
      "@themes/*": [
        "./themes/*"
      ]
    },
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}